<!-- Configuration file used to connect to the PersystentSystems radio -->

<PerSysRadioConfig>
   
   <!-- Begin Radio configuration -->
   <Radio>
      <!-- IP address or DNS name -->
      <Address>172.16.0.3</Address>

      <!-- Port number -->
      <Port>443</Port>

      <!-- Whether to use secure channel or SSL  -->
      <UseSecureChannel>true</UseSecureChannel>

      <!-- Password  
      <Password></Password>
	  -->

      <!-- Salt string used to generate key. All characters should be hexadecimal.
            Length should be atleast 128 and also length should be even. 
      <PBKDF2Salt></PBKDF2Salt>
	  -->

      <!-- Key used for HMAC function. All characters should be hexadecimal.
            Length should be atleast 128 and also length should be even. 
      <HMACKey></HMACKey>
	  -->

   </Radio>
   <!-- End Radio configuration -->
   
</PerSysRadioConfig>
